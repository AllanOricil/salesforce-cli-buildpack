#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

START_TIME=$SECONDS

set -x            # debug every command
set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
set -o nounset    # fail on unset variables
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

### Configure directories
CLI_PATH="/tmp/cli"
BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

source <(curl -s --retry 3 https://lang-common.s3.amazonaws.com/buildpack-stdlib/v7/stdlib.sh)

### Helpful functions
header() {
  echo "" || true
  echo -e "\033[96m\033[1m\033[40m-----> $*\033[0m" || true
}

update() {
  echo -e "       $*" || true
}

install_sfdx_cli() {
  local URL='https://developer.salesforce.com/media/salesforce-cli/beta/sfdx-v5.7.4-57b4969-linux-amd64.tar.xz'
  local DIR="$1"
  curl --silent --location "$URL" | tar xJ
  ls -la $DIR
  cp sfdx/bin/sfdx "$DIR/.heroku/bin/sfdx"
  rm -rf "$DIR/.local/share/sfdx/cli"
  mkdir -p "$DIR/.local/share/sfdx"
  cp -r sfdx "$DIR/.local/share/sfdx/cli"
  sfdx update
}

export_env "$ENV_DIR"

install_sfdx_cli "$BUILD_DIR"

# ### Create temp folder
# mkdir /tmp/cli

# ### Execute commands
# header 'Welcome to salesforce-cli-buildpack!'
# update "Running install command for Salesforce CLI ..."
# "./sfdx/install" &>/dev/null
# update "Setting path for Salesforce CLI ($CLI_PATH) ..."
# export PATH=$CLI_PATH:$PATH
# update "Installing the salesforcedx plugin ..."
# sfdx update &>/dev/null
# update "Checking Salesforce CLI plugins ..."
# PLUGINS=$(sfdx plugins)
# update "Plugin version: $PLUGINS"
# header "DONE! Completed in $(($SECONDS - $START_TIME))s"
exit 0

