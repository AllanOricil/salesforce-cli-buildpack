#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

START_TIME=$SECONDS

# set -x            # debug every command
set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

### Configure directories
CLI_PATH="/tmp/cli"
BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

# set defaults for optional config vars
: ${SFDX_BUILDPACK_DEBUG:="false"}

source $BP_DIR/lib/common.sh
source $BP_DIR/lib/stdlib.sh

### Setup functions

install_sfdx_cli() {
  local DIR="$1"
  log "Downloading Salesforce CLI tarball ..."
  curl --silent --location "https://developer.salesforce.com/media/salesforce-cli/sfdx-linux-amd64.tar.xz" | tar xJ
  log "Copying Salesforce CLI binary ..."

  rm -rf "$DIR/.local/share/sfdx/cli"
  mkdir -p "$DIR/.local/share/sfdx"
  cp -r sfdx "$DIR/.local/share/sfdx/cli"
  chmod -R 755  "$DIR/.local/share/sfdx/cli"
}

setup_dirs() {
  local DIR="$1"
  export PATH="$DIR/.local/share/sfdx/cli/bin:$DIR/.sfdx/bin:$PATH"
}

header 'Welcome to salesforce-cli-buildpack!'
log "Exporting environment directories ..."
export_env "$ENV_DIR"
log "Setting up paths ..."

log "-- BUILD_DIR" $BUILD_DIR
log "-- CACHE_DIR" $CACHE_DIR
log "-- ENV_DIR" $ENV_DIR

setup_dirs "$BUILD_DIR"
log "Starting CLI installation ..."
install_sfdx_cli "$BUILD_DIR"

# if no .profile, create one
if [ ! -f $BUILD_DIR/.profile ]; then
  log "Creating .profile ..."
  echo "echo \"Updating PATH to include Salesforce CLI ...\"
export PATH=\$PATH:/app/.local/share/sfdx/cli/bin/

echo \"Updating Salesforce CLI plugin ...\"
sfdx update" > $BUILD_DIR/.profile

  log "Generated .profile to add CLI path and update"
fi

header "DONE! Completed in $(($SECONDS - $START_TIME))s"
exit 0